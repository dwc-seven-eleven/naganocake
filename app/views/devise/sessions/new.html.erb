<center>
<div class="container">
  <div class="row">
    <h4>会員の方はこちらからログイン</h4>
  </div>
  <table class="table-borderless">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <tr><th><%= f.label :"メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %></th></td>
          <tr><th><%= f.label :"パスワード" %></th>
          <td><%= f.password_field :password, autocomplete: "パスワード" %></th></td>
</table>

          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "=>パスワード忘れた方はこちら", new_password_path(resource_name) %><br />
          <% end %>

         <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
         </div>
      <% end %>

  </div>

  <div class="row">
    <h4>登録がお済みでない方</h4>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。<br />
      <% end %>
  </div>
</div>
</center>