<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <h4>名前</h4>
  <div class="field">
    <%= f.label :family_name, '（性）' %>
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
  </div>

  <div class="field">
    <%= f.label :first_name, '（名）' %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

<h4>ナマエ(カナ)</h4>
   <div class="field">
    <%= f.label :family_name_kana, '（セイ）（全角カナ）' %>
    <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, '（メイ）（全角カナ）' %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>
<br>
  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :address, '住所' %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

   <div class="field">
    <%= f.label :postcode, '郵便番号(ハイフンなし半角)' %><br />
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, '電話番号' %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>


  <div class="field">
    <%= f.label :password, 'パスワード' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード確認用' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>







  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h3>既に登録済みの方</h3>
<%= link_to "こちら", new_user_session_path %>
からログインしてください。
