<center>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container">
      <div class="panel panel-default">
                  <div class="panel-heading">新規会員登録</div>
                  <div class="panel-body">
            <div class="row">
                <div class="col-md-2">
                </div>

                <div class="col-md-6 body">
                  
                  <form>
                    <div class="field"　class="form-control" class="pr-5">
                      <label>名前:</label>
                      <%= f.label :family_name, '（姓）' %>
                      <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %><br />
                      <%= f.label :first_name, '（名）' %>
                      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                      </div><br />

                    <div class="field"　class="form-control">
                      <label>ナマエ(全角):</label>
                      <%= f.label :family_name_kana, '（セイ）' %>
                      <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %><br />
                      <%= f.label :first_name_kana, '（メイ）' %>
                      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
                    </div><br />

                    <div class="field"　class="form-control">
                      <label>メールアドレス:</label>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    </div><br />


                     <div class="field">
                      <label>住所:</label>
                      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
                      </div><br />


                      <div class="field">
                        <label>郵便番号(ハイフンなし):</label>
                        <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
                        </div><br />

                      <div class="field">
                        <label>電話番号:</label>
                        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
                        </div><br />


                        <div class="field">
                        <label>パスワード:</label>
                        <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %>
                         <%= f.password_field :password, autocomplete: "new-password" %>
                        </div><br />


                        <div class="field">
                        <label>パスワード:</label>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                        
                        </div><br />
                      </div>



                        
  

                 
                </div>

                <div class="col-md-4"></div>
                </div>

            </div>
            <div class="actions btn">
                        <%= f.submit "新規登録", class: "btn btn-primary" %>
                        
                        <h3>既に登録済みの方</h3>
                  <%= link_to "こちら", new_user_session_path %>
                  からログインしてください。</div>
  <% end %> </form>

        
</div>
</div>
</center>