<!--topページから遷移する該当顧客の注文一覧-->
<h1>注文履歴一覧</h1>
  <table class="table table-bordered">
    <thead>
      <tr class="active">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.zip(@order_products) each do |order, order_product| %>
      <tr>
        <td></td>
        <td><%= order.created_at %></td>
        <td><%= "#{order.user.familyname} #{order.user.firstname}" %></td>
        <td><%= order_product.production_item %></td>
        <td><%= order.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
    <%= paginate @orders %>