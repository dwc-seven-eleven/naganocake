<h1>注文履歴一覧</h1>
  <table class="table table-bordered">
    <thead>
      <tr class="active">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @order_products.each do |order_product| %>
      <tr>
        <td><%= link_to order_product.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(@oder) %></td>
        <td><%= order_product.order.shipping_name %></td>
        <td><%= order_product.production_item %></td>
        <td><%= order_product.order.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @order_products %>