<h1>注文履歴一覧</h1>
  <table class="table table-bordered">
    <thead>
      <tr class="active">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order) %></td>
        <td><%= "#{order.user.family_name}#{order.user.first_name}" %></td>
        <td><%= order.order_products.all.sum(:production_item) %></td>
        <td><%= order.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @orders %>
