<div class="col-xs-3">
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
      <th>ジャンル検索</th>
      </tr>
      <tr>
      <% @genres.each do |genre| %>
        <tr>
        <td><%= link_to genre.name, products_path(genre.id) %></td>
        </tr>
        <% end %>
        </tr>
    </tbody>
  </table>  
</div>
<div class="col-xs-3">
        <% if params[:genre_id] %>
          <h2><%= @genre.name %>（全<%= @products.total_count %>件）</h2>
        <% else %>
          <h2>商品一覧 （全<%= @products.total_count %>件）</h2>        
        <% end %>
      </tr>
      <tr>
        <% @products.each do |product| %> 
            <td><%= attachment_image_tag product, :product_image, format: 'jpeg', fallback: "no_image.jpg", size: "130x130" %></td>  
          <h4 class="card-title"><%= link_to product.product_name, product_path(product.id) %></h4>
 
          <p class="card-text"><%= product.product_introduction %></p>
          <% end %>
          <%= paginate @products %>   
</div>