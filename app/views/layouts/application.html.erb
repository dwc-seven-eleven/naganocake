<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header class="navbar navbar-inverse">
   <div class="container">
     <nav class="nav navbar-nav navbar-left">
       <span>Nagano Cake</span>
     </nav>
     <nav>
       <ul class="nav navbar-nav navbar-right" >
         <% if admin_signed_in? %>
            <li>
              <%= link_to '商品一覧', admin_products_path %>
            </li>
            <li>
              <%= link_to '会員一覧', admin_users_path %>
            </li>
            <li>
            <%= link_to '注文履歴一覧', admin_orders_path %>
            </li> 
            <li>
              <%= link_to 'ジャンル一覧', admin_genres_path %>
            </li>
            <li>
              <%= link_to 'Logout', destroy_admin_session_path, method: :delete %>
            </li> 
        <% elsif user_signed_in? %>
            <li>
              <%= link_to 'マイページ', user_path(current_user.id) %>
            </li>
            <li>
              <%= link_to '商品一覧', products_path %>
            </li>
            <li>
              <%= link_to 'カート', cart_path(current_user) %>
            </li> 
            <li>
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
            </li>
        <% else %>
            <li>
              <%= link_to 'about', homes_about_path %>
            </li>
            <li>
              <%= link_to '商品一覧', products_path %>
            </li>
            <li>
              <%= link_to '新規登録', new_user_registration_path %>
            </li>
            <li>
              <%= link_to 'ログイン', new_user_session_path %>
            </li>
         <% end %> 
       </ul>
     </nav>
   </div>    
 </header>
    <%= yield %>
  </body>
</html>
