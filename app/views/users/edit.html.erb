<body>
<div class="container edit">
  <div class="row">
    <div class="col-lg-4">
    </div>
      <div class="col-lg-4">
      <h1>User info</h1>
    
      <%= form_for(@user) do |f| %>

        <div class= "form">
          <label>(姓)</label>
          <%= f.text_field :family_name %>
        </div>
        <div class="form">
          <label>(名)</label>
          <%= f.text_field :first_name %>
        </div>
        <div class="form">
          <label>(セイ)</label>
          <%= f.text_field :family_name_kana %>
        </div>
        <div class="form">
          <label>(メイ)</label>
          <%= f.text_field :first_name_kana %>
        </div>
        <div class="form">
          <label>メールアドレス</label>
          <%= f.text_field :email %>
        </div>

        <div class="form">
          <label>郵便番号(ハイフンなし)</label>
          <%= f.text_field :postcode %><br>
        </div>

        <div class="form">
          <label>住所 </label>
          <%= f.text_field :address %><br>
        </div>

        <div class="form">
          <label>電話番号(ハイフンなし)</label>
          <%= f.text_field :phone_number %><br>
         </div>
        
        <div class=actions>
          <%= f.submit '編集内容を保存する',class: "btn-sm orange"  %><br>
        </div>

        <%= link_to '退会する', leave_user_user_path(@user.id),class: "btn-sm btn-danger"  %>
      
       <% end %>
      </div> 
       <div class="col-lg-4">
      </div>
    </div> 
   </div> 
  </body>

 