<h1>マイページ</h1>
<table>
  <tr>
    <td><h2>登録情報</h2></td>
    <td><%= link_to "編集する", edit_user_path(@user),class: "btn-sm btn-success" %></td>
    <td><%= link_to "パスワードを変更する", new_user_password_path(@user),class: "btn-sm btn-success" %></td>
  </tr>
</table>
<table>
  <tr>
    <td>氏名</td>
    <td><%= @user.family_name %><%= @user.first_name %></td>
  </tr>
  <tr>
    <td>カナ</td>
    <td><%= @user.family_name_kana %><%= @user.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @user.postcode %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @user.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @user.phone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @user.email %></td>
  </tr>
</table>
<table>
  <tr>
    <td><h3>配送先</h3></td>
    <td><%= link_to "一覧を見る", shipping_addresses_path,class: "btn-sm btn-success" %></td>
    <td></td>
  </tr>
  <tr>
    <td><h3>注文履歴</h3></td>
    <td><%= link_to "一覧を見る", orders_path,class: "btn-sm btn-success" %></td>
    <td></td>
  </tr>
</table>