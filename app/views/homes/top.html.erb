<div class="container">

	<div class="row">

		<div class="col-md-3">

			<%= render 'admin_genres/genre', genre: @genres %>

		</div>

		<div class="col-xs-9">

			<div class="main-visual">
			  <div class="text-center">
			  	<div class="main-text">
					ようこそ、NaganoCakeへ！<br />
					このサイトは、ケーキ販売のECサイトになります。<br />
					会員でない方も商品の閲覧はできますが、<br />
					購入には会員登録が必要になります。
				</div>
			  </div>
			</div>

		</div>

	</div>

	<div class="row">

		<div class="col-md-2">
		</div>

		<div class="col-xs-10">

			<h2 class="h2">オススメ商品</h2>

			<% @random.each do |product| %>
				<% if product.genre.status == "有効" %>

				<div class="list">
					<%= link_to product_path(product.id) do %>

					<%= attachment_image_tag product, :product_image, format: 'jpeg', fallback: "no_image.jpg", size: "150x130" %><br />

					<div class="card-title">
						<%= product.product_name %>
					</div>

					<% end %><br />
					¥<%= product.non_taxed_price %>
				</div>

				<% end %>
			<% end %>

		</div>

	</div>


	<div class="row">

		<div class="text-right">
			<%= link_to "もっと見る>", products_path %>
		</div>

	</div>
</div>