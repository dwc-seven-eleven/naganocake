<h1>ジャンル一覧・追加</h1>

<!--ジャンル追加-->
	<%= form_for(@genre, url: admin_genres_path) do |genre| %>
	<%= genre.label "ジャンル" %>
	<%= genre.text_field :name %>
	<%= genre.radio_button :status, :有効, checked: true %>有効
	<%= genre.radio_button :status, :無効 %>無効
	<%= genre.submit "追加", class: "btn btn-primary" %>
	<% end %>
<!--/ジャンル追加-->
<!--ジャンル一覧-->
	<table class="table">
		<thead>
			<tr class="active">
				<th>ジャンル</th>
				<th>状態</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.name %></td>
				<td><%= genre.status %></td>
				<td><%= link_to "編集する",  edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
			<!-- 仮置き・後で消す-->
			<td><%= link_to "Destroy(仮置き)",  admin_genre_path(genre.id), method: :delete, class: "btn-sm btn-danger" %></td>
			<!-- /仮置き・後で消す-->
			</tr>
			<% end %>
		</tbody>
	</table>
<!--/ジャンル一覧-->
