<div class="container">
<h3>ジャンル一覧・追加</h3>
<div class="row">
	<%= form_for(@genre, url: admin_genres_path) do |genre| %>
	<%= genre.label "ジャンル" %>
	<%= genre.text_field :name %>
	<%= genre.radio_button :status, :有効, checked: true %>有効
	<%= genre.radio_button :status, :無効 %>無効
	<%= genre.submit "追加", class: "btn btn-primary" %>
	<% end %>
</div>
<div class="row">
<div class="col-lg-5">
	<table class="table">
		<thead>
			<tr class="active">
				<th>ジャンル</th>
				<th>状態</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.name %></td>
				<td><%= genre.status %></td>
				<td><%= link_to "編集する",  edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
</div>
</div>
