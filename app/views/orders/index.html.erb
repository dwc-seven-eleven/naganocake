<h1>注文履歴一覧</h1>
<table class="table table-striped">
    <tr class="active">
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    <tr>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
        <td><%= order.shipping_postcode %><br>
            <%= order.shipping_adress %><br>
            <%= order.shipping_name %>
        </td>
        <td>
          <% order.order_products.each do |order| %>
            <%= order.product.product_name %>
          <% end %>
        </td>
        <td><%= order.total_price %></td>
        <td><%= order.status %></td>
        <td><%= link_to "注文詳細", order_path(order.id), class: "btn btn-primary" %></td>
      </tr>
   <% end %>
</table>