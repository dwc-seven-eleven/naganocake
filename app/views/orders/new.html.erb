<!DOCTYPE html>
<html>

	<body>

		<div class="container">
			
			<div class="row">
				
				<div class="col-">
					
					<h3>注文情報入力</h3>

					<h4>支払方法</h4>

					<%= form_with model: @order, local: true, method: :post, url: orders_confirm_path do |f| %>

						<!--ラジオボタン クレジット-->
						<%= f.radio_button :pay, '0', checked: true %>
						<%= f.label :pay, 'クレジットカード', value: 0 %>
						<br />
						<!--ここまで-->

						<!--ラジオボタン 銀行振込-->
						<%= f.radio_button :pay, '1' %>
						<%= f.label :pay, '銀行振込', value: 1 %>
						<!--ここまで-->


					<h4>お届け先</h4>

					<%= f.radio_button :full, '0', checked: true %>
						<%= f.label :full, 'ご自身の住所' %>

						<%= "#{@user.postcode} #{@user.address}"  %>

						<%= "#{@user.family_name + @user.first_name}" %>
						

						

						
						<%= f.radio_button :full, '1' %>
						<%= f.label :full, '登録済住所から選択' %>

						<%= f.collection_select :fulladdress, ShippingAddress.all, :id,:fulladdress, prompt: "選択してください" %>
						

						

						
						<%= f.radio_button :full, '2' %>
						<%= f.label :full, '新しいお届け先' %>
						

							郵便番号(ハイフンなし)
							<%= f.text_field :shipping_postcode %>
						

						

							住所
							<%= f.text_field :shipping_adress %>
						

						

							宛名
							<%= f.text_field :shipping_name %>
						

						


						<%= f.submit '確認画面へ進む' %>


					<% end %>


				</div>

			</div>

		</div>

	</body>

</html>