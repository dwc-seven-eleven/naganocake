<h1>注文履歴詳細</h1>
<div class="row">
<div class="col-md-7">
<p>注文情報</p>
<table class="table table-bordered">
  <tr>
    <td class="active">注文日</td>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <td class="active">配送先</td>
    <td><%= @order.shipping_postcode %><br>
        <%= @order.shipping_adress %><br>
        <%= @order.shipping_name %>
    </td>
  </tr>
  <tr>
    <td class="active">支払方法</td>
    <td><%= @order.pay %></td>
  </tr>
  <tr>
    <td class="active">ステータス</td>
    <td><%= @order.status %></td>
  </tr>
</table>
</div>

<div class="col-md-3">
<p>請求情報</p>
<table class="table table-bordered">
  <tr>
    <td class="active">商品合計</td>
    <td><%= @order.total_price %>円</td>
  </tr>
  <tr>
    <td class="active">配送料</td>
    <td><%= @order.postage %>円</td>
  </tr>
  <tr>
    <td class="active">ご請求額</td>
    <td><%= @order.total_price.to_i + @order.postage.to_i %>円</td>
  </tr>
</table>
</div>
</div>

<div class="row">
<div class="col-md-7">
<p>注文内容</p>
<table class="table table-bordered">
    <tr class="active">
      <th>商品</th>
      <th>単価</th>
      <th>個数</th>
      <th>小計</th>
    <tr>
  <tbody>
    <% sum_all = 0 %> <!--合計金額の初期設定-->

    <% @order.order_products.each do |order| %>
    <tr>
      <td><%= order.product.product_name %></td>
      <td><%= order.product.unit_price %></td>
      <td><%= order.production_item %></td>

      <td><%= sum_product = order.product.unit_price.to_i * order.production_item %>
             <% sum_all += sum_product %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>




