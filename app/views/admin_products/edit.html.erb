<!DOCTYPE html>
<html>

	<body>

		<div class="container">

			<div class="row">
				<h3>商品編集</h3>
			</div>

			<div class="row">

				<%= form_for(@product, url: admin_product_path) do |f| %>

					<div class="col-lg-4">

						<%= attachment_image_tag @product, :product_image, :fill, 300, 300, format: 'jpeg' %>
						<%= f.attachment_field :product_image, placeholder: "商品画像" %>

					</div>

					<div class="col-lg-5">

						<table class="table">
							<tbody>
								<tr>
									<th>商品名</th>
									<th><%= f.text_field :product_name %></th>
								</tr>
								<tr>
									<th>商品説明</th>
									<th><%= f.text_area :product_introduction %></th>
								</tr>
								<tr>
									<th>ジャンル</th>
									<th> <%= select_tag 'genre', options_from_collection_for_select(Genre.all, :id, :name, include_blank: true) %> </th>
								</tr>
								<tr>
									<th>税抜価格</th>
									<th><%= f.text_field :non_taxed_price %>円</th>
								</tr>
								<tr>
									<th>販売ステータス</th>
									<th><%= f.select :sale_status, Product.sale_statuses.keys, {}, {class: 'hoge'} %></th>
								</tr>
							</tbody>
						</table>
					</div>

					<div class="col-lg-3">

						<%= f.submit "変更を保存", class:"btn btn-primary btn-block" %>

					</div>

				<% end %>

		</div>

	</body>

</html>
