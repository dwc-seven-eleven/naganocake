<!DOCTYPE html>
<html>
<script src="https://kit.fontawesome.com/850f37abe5.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="style.css">

	<body>

		<div class="container">

			<div class="row">
				<h3>商品一覧</h3>
			</div>

			<div class="row">

				<div class="text-right">

					<%= link_to new_admin_product_path do %>
						<span class="fas fa-plus-circle"></span>
					<% end %>

				</div>

			</div>

			<div class="row">

				<table class="table table-hover table-inverse">
					<thead>
						<tr class="active">
							<th>商品ID</th>
							<th>商品名</th>
							<th>税抜価格</th>
							<th>ジャンル</th>
							<th>ステータス</th>
						</tr>
					</thead>
					<tbody>
						<% @products.each do |product| %>
							<tr>
								<td><%= product.id %></td>
								<td>
									<%= link_to admin_product_path(product.id) do %>
										<%= product.product_name %>
									<% end %>
								</td>
								<td><%= product.non_taxed_price %></td>
								<td><%= product.genre.name %></td>
								<td><%= product.sale_status %></td>
							</tr>
						<% end %>
						
					</tbody>
				
				</table>

			</div>
			<%= paginate @products %>
		</div>

	</body>

</html>
